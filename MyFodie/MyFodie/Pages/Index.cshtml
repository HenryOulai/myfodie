@page
@model RecipeIndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <ul>
        @foreach (var recipe in Model.Recipes)
        {
            <li>
                <h3>@recipe.Name</h3>
                <p>@recipe.Description</p>
                <p class="secondtitle">Category:</p>
                <p>@recipe.Category</p>
                <p class="secondtitle">Ingredient:</p>
                <p>@recipe.Ingredient</p>
            </li>
        }
    </ul>
</div>
